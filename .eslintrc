{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "google"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [2, 2],
    "max-len": [2, 
      {
        "code": 120,
        "tabWidth": 2,
        "ignoreUrls": true,
        "ignorePattern": "^import\\s.*\\s*'.+';$"
      }
    ],
    "linebreak-style": [2, "unix"],
    "object-curly-spacing": [2, "always"],
    "require-jsdoc": 0,
    "react/prop-types": [
      2,
      {
        "ignore": [
          "children"
        ]
      }
    ],
    "react/require-default-props": 0
  }
}