{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "es",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./definitions"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/stories/**"
  ]
}
