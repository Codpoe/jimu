{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "es",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/stories/**"
  ]
}
